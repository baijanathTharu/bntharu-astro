---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
import BaseLayout from "../layouts/BaseLayout.astro";

const posts = (await Astro.glob("./blog/**/*.{md,mdx}"))
  .filter((post) => !!post.frontmatter.isPublished)
  .sort(
    (a, b) =>
      new Date(b.frontmatter.pubDate).valueOf() -
      new Date(a.frontmatter.pubDate).valueOf()
  );
---

<BaseLayout>
  <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />

  <Header title={SITE_TITLE} />
  <main class="px-4">
    <content>
      <ul class="mx-auto flex flex-wrap justify-center md:gap-4">
        {
          posts.map((post) => (
            <a
              class="w-full md:w-52 my-4 rounded-lg text-xl p-8 shadow-lg hover:shadow-2xl hover:text-orange-500"
              href={post.url}
            >
              <li class="">
                <div class="flex flex-col">
                  <h2 class="text-sm font-semibold text-wrap break-words">{`${post.frontmatter.title.slice(
                    0,
                    60
                  )}...`}</h2>
                  <div class="pt-2 text-xs font-semibold">
                    <time datetime={post.frontmatter.pubDate}>
                      {new Date(post.frontmatter.pubDate).toLocaleDateString(
                        "en-us",
                        {
                          year: "numeric",
                          month: "short",
                          day: "numeric",
                        }
                      )}
                    </time>
                    <span class="">({post.frontmatter.minutesRead})</span>
                  </div>
                </div>
              </li>
            </a>
          ))
        }
      </ul>
    </content>
  </main>
  <Footer />
</BaseLayout>
